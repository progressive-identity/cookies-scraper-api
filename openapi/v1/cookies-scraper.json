  "paths": {
    "/cookies": {
      "get": {
        "summary": "Your GET endpoint",
        "tags": [
          "Cookies"
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/CookieInfoList"
          }
        },
        "operationId": "getCookies",
        "description": "Fetch cookies from the url of a website present in path param.",
        "parameters": [
          {
            "schema": {
              "type": "string",
              "format": "uri"
            },
            "in": "query",
            "name": "url",
            "required": true,
            "description": "The url from where to fetch"
          },
          {
            "schema": {
              "type": "number"
            },
            "in": "query",
            "name": "pagesNumber",
            "description": "The number of pages we want to fetch"
          }
        ]
      },
      "parameters": []
    },
    "/scripts": {
      "get": {
        "summary": "Get all scripts",
        "tags": [
          "Cookies"
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/ScriptInfoList"
          }
        },
        "operationId": "getCookies",
        "description": "Fetch scripts and their associated cookies from the url of a website present in query param.",
        "parameters": [
          {
            "schema": {
              "type": "string",
              "format": "uri"
            },
            "in": "query",
            "name": "url",
            "required": true,
            "description": "The url from where to fetch"
          },
          {
            "schema": {
              "type": "number"
            },
            "in": "query",
            "name": "pagesNumber",
            "description": "The number of pages we want to fetch"
          }
        ]
      },
      "parameters": []
    }
  },
